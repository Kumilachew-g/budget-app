<main class="bg-gray-200 h-screen flex flex-col">
  <header>
    <nav class="flex items-center justify-between background-blue p-4 text-white">   
      <a href='/'><i class="fas fa-arrow-left text-2xl"></i></a>
      <h1 class="text-center font-bold text-2x p-3">TRANSACTIONS</h1>
      <i class="fa-solid fa-magnifying-glass"></i>
    </nav>
  </header>
  <p style="color: green"><%= notice %></p>
  <div class="grow">
    <%= render @group %>
    <div class="flex justify-end px-3">
      <%= button_to @group, method: :delete, class: "px-2 py-1 text-2xl rounded text-white bg-red-700" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>

    <h2 class="text-center font-bold text-2xl p-3">DETAILS </h2>
    <div class="flex flex-col justify-between">
      <div class="flex flex-col gap-3">
        <% @group.entities.order("created_at desc").each do |entity| %>
          <div class="shadow-md shadow-gray-200 hover:shadow-xl hover:shadow-gray-300">
            <div class="flex items-center gap-4 w-full bg-white p-3">
              <div class="grow">
                <div class="flex justify-between w-full">
                  <h3 class="text-xl text-gray-400"><%= entity.name %></h3>
                  <div class="font-bold">
                    $<%= entity.amount %>
                  </div>
                </div>
                <div class="flex justify-between w-full">
                  <p class="text-gray-400"><%= entity.created_at.strftime("%d %b %Y") %></p>
                    <%= button_to entity, method: :delete, class: "px-2 py-1 rounded text-white bg-red-700" do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="bg-green-500 text-white w-full p-3 flex">
    <%= link_to "NEW TRANSACTION", new_entity_path, class: "border border-white w-full p-3 text-center font-bold text-2x" %>
  </div>
</main>